# ==============================================
# FACEBOOK AUTO-POST DASHBOARD - CONFIGURATION
# ==============================================

# Facebook Credentials (Required)
# Get these from: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_user_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here

FACEBOOK_PAGE_TOKEN=your_facebook_page_access_token_here
FACEBOOK_PAGE_NAME=your_facebook_page_name_here
FACEBOOK_APP_NAME=your_facebook_app_name_here
FACEBOOK_API_VERSION=v17.0

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=facebook_autopost_db

# Application Settings
MAX_FILE_SIZE=5242880                # Maximum file size in bytes (5MB)
UPLOAD_FOLDER=uploads/               # Folder where uploaded files are stored
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
MAX_FILES_PER_POST=5

# CORS / Allowed Origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
